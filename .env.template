# Number of days between database cleanup operations
CLEAN_INTERVAL_DAYS=<clean_interval>

# Number of days before URLs expire
EXPIRY_DAYS=<expiry_days>

# Length of the generated short URL code
CODE_LEN=<code_length>

# Enable debug mode (True/False)
DEBUG=<debug_mode>

# PostgreSQL database host address
POSTGRES_HOST=<db_host>

# PostgreSQL database port
POSTGRES_PORT=<db_port>

# PostgreSQL database name
POSTGRES_DB=<db_name>

# PostgreSQL database user
POSTGRES_USER=<db_user>

# PostgreSQL database password
POSTGRES_PASSWORD=<db_password>

# Secret key for application security
SECRET_KEY=<secret_key>

# Allowed hosts for the application (comma separated)
ALLOWED_HOSTS=<allowed_hosts>